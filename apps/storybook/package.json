{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@krudi/storybook",
    "version": "0.1.0",
    "private": true,
    "description": "Storybook workspace for @krudi/styles (HTML stories).",
    "scripts": {
        "build": "storybook build --docs",
        "clean": "rm -rf .turbo .cache node_modules storybook-static",
        "dev": "storybook dev",
        "lint:eslint": "eslint . --cache --cache-location .cache/.eslintcache",
        "lint:eslint:fix": "eslint . --fix --cache --cache-location .cache/.eslintcache",
        "lint:prettier": "prettier --check . --cache --cache-strategy metadata --cache-location .cache/.prettiercache",
        "lint:prettier:fix": "prettier --write . --cache --cache-strategy metadata --cache-location .cache/.prettiercache",
        "preview": "serve storybook-static",
        "test:storybook": "vitest --project storybook",
        "test:storybook:coverage": "vitest --project storybook --coverage",
        "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "dependencies": {
        "@krudi/styles": "*"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^5.0.0",
        "@krudi/eslint-config": "^0.1.8",
        "@krudi/prettier-config": "^0.1.8",
        "@storybook/addon-a11y": "^10.2.0",
        "@storybook/addon-docs": "^10.2.0",
        "@storybook/addon-links": "^10.2.0",
        "@storybook/addon-themes": "^10.1.11",
        "@storybook/addon-vitest": "^10.2.0",
        "@storybook/html-vite": "^10.2.0",
        "@types/node": "^22.18.0",
        "@vitest/browser-playwright": "^4.0.16",
        "@vitest/coverage-v8": "^4.0.18",
        "eslint-plugin-storybook": "10.2.0",
        "playwright": "^1.57.0",
        "storybook": "^10.2.0",
        "typescript": "^5.9.2",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    }
}
